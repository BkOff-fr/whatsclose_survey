{
  "name": "whatsclose-survey",
  "version": "1.0.0",
  "private": true,
  "author": "WhatsClose Team",
  "license": "PROPRIETARY",
  "description": "WhatsClose - Expérience immersive 3D pour révolutionner les courses locales",
  "homepage": "https://whatsclose.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/whatsclose/survey-experience.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint.",
    "lint:fix": "eslint. --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "analyze": "ANALYZE=true next build",
    "setup": "node scripts/setup.js",
    "monitor": "node scripts/monitor.js",
    "docker:build": "docker build -t whatsclose-survey.",
    "docker:run": "docker run -p 3000:3000 whatsclose-survey",
    "docker:compose": "docker-compose up",
    "clean": "rm -rf.next node_modules package-lock.json && npm install",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,md,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,md,json}\"",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "postinstall": "node scripts/setup.js",
    "vercel:build": "npm run build",
    "lighthouse": "lighthouse http://localhost:3000 --output html --view"
  },
  "dependencies": {
    "@react-three/drei": "^10.7.4",
    "@react-three/fiber": "^9.3.0",
    "framer-motion": "^11.0.0",
    "lenis": "^1.0.45",
    "lucide-react": "^0.541.0",
    "next": "^15.5.0",
    "persist": "^0.2.7",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "three": "^0.168.0",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.5.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.2",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "@types/three": "^0.167.1",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.4.0",
    "eslint-config-next": "15.5.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-watch-typeahead": "^2.2.2",
    "lint-staged": "^15.2.5",
    "postcss": "^8.5.6",
    "prettier": "^3.3.2",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.4.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.3%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
